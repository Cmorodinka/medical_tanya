<div id="search-result">
			<!--<h4 class="title-last-vacancies"><span class="icon-last-vacancies">СПИСОК КОМПАНИЙ</span></h4>
			<span class="label-tail-last-vacancies"></span>-->
			<table id="admin-search-result-company" class="search-result" class="search-result" width="100%">
				<tr>
					<th>Логотип</th>
					<th>Название</th>
					<th>Статус</th>
					<th>Кол-во вакансий</th>
					<th>Посещений</th>
					<th>Последнее</th>
				</tr>

				<% @companies.each do |company| %>	
					<tr>
						<td><%= image_tag company.logo.url(:search), :class => "photo-employer" %></td>
						<td><%= link_to company.name, edit_admin_companies_profile_path(company.id) %></td>
		  			<td><%= company.human_state_name %></td>
		    		<td>Вакансий <%= company.vacancies.count %></td>
		    		<td><%= company.employer.session_count %></td>
		    		<td>
		    				<% unless company.employer.session_last_time.nil? %>
		    					<%= company.employer.session_last_time.localtime.strftime("%F %H:%M") if company.employer.active? %>
		    				<% end %>
		    				<%= link_to({:controller => "/admin/search", :action => "choice_user_for_admin", :token => company.employer.token}, :class => "delte-vacancy-respond", :confirm => "Вы хотите залогиниться как #{company.employer.email}", :target => "_blank") do %>
                  				<img src="/assets/my-profile.png" class=""></a>
                  			<% end %>
		    			</td>
					</tr>
				<% end %>
			</table>
			<!-- <div class="link-more"><b><a href="#">Показать еще</a></b></div> -->
			<div class="link-more"><b><%= paginate @companies %></div>

</div>

